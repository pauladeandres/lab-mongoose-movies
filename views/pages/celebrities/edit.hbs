<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>Edit {{name}}</h1>
            <hr>

            <form action="/celebrities/edit/{{id}}" method="POST">
                <div class="form-group">
                    <label for="nm">Name</label>
                    <input type="text" class="form-control" id="nm" name="name" value="{{name}}">
                </div>
                <div class="form-group">
                    <label for="job">Occupation</label>
                    <input type="text" class="form-control" id="job" name="occupation" value="{{occupation}}">
                </div>
                <div class="form-group">
                    <label for="cp">Catch Phrase</label>
                    <input type="text" class="form-control" id="cp" name="catchPhrase" value="{{catchPhrase}}">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Update</button>
            </form>

        </div>
    </div>
</div>