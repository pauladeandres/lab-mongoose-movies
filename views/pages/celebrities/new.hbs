
<div class="container">

    <div class="row justify-content-center">
        <div class="col-md-6">

            <h1>New Celebrity</h1>
            <hr>

            <form action="/celebrities/new" method="POST">
                <div class="form-group">
                    <label for="nm">Name</label>
                    <input type="text" class="form-control" id="nm" name="name">
                </div>
                <div class="form-group">
                    <label for="job">Occupation</label>
                    <input type="text" class="form-control" id="job" name="occupation">
                </div>
                <div class="form-group">
                    <label for="cp">Catch Phrase</label>
                    <input type="text" class="form-control" id="cp" name="catchPhrase">
                </div>

                <button type="submit" class="btn btn-dark btn-block">Add celebrity</button>
            </form>

        </div>
    </div>
</div>